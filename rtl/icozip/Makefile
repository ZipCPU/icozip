.PHONY: all
all: cpudefs.h design.h verilated bin
CROSS ?=
ARCH  ?= $(shell bash ../../sw/host/arch.sh)
CXX   := $(CROSS)g++
FBDIR := .
VDIRFB:= $(FBDIR)/obj-$(ARCH)
VOBJ := obj-$(ARCH)
include auto.mk
PCFFILE := icozip.pcf
# toplevel.v rxuart.v txuart.v
# rtcdate.v wbubus.v
ICOSRCS := toplevel.v main.v $(WBUBUS) $(PPBUS) $(PPORT) cpu/icontrol.v memdev.v ufifo.v

#
# Verilator build from the main level.  This is not the toplevel verilog
# file, but one beneath it, so as to allow the top level file to contain device
# specific logic and functions (PLLs, etc.).
#
#

.PHONY: verilated
verilated: $(VDIRFB)/Vmain__ALL.a

# $(VDIRFB)/V%.cpp: $(VDIRFB)/V%.h
# $(VDIRFB)/V%.mk:  $(VDIRFB)/V%.h
# $(VDIRFB)/V%.h: $(FBDIR)/%.v
#	verilator -O3 -Mdir $(VDIRFB) -trace -cc $(AUTOVDIRS) $*.v

$(VDIRFB)/Vmain.cpp: $(VDIRFB)/Vmain.h
$(VDIRFB)/Vmain.mk:  $(VDIRFB)/Vmain.h
$(VDIRFB)/Vmain.h: main.v $(VFLIST)
	verilator -O3 -Mdir $(VDIRFB) -trace -cc $(AUTOVDIRS) main.v

cpudefs.h: cpu/cpudefs.v
	@echo "Building cpudefs.h"
	@echo "// " > $@
	@echo "// Do not edit this file, it is automatically generated!" >> $@
	@echo "// To generate this file, \"make cpudefs.h\" in the rtl directory." >> $@
	@echo "// " >> $@
	@echo >> $@
	@sed -e '{ s/^`/#/ }' $< | sed -e ' s/cpudefs.v/cpudefs.h/' >> $@
	@echo >> $@

design.h: main.v
	@echo "Building design.h"
	@echo "// " > $@
	@echo "// Do not edit this file, it is automatically generated!" >> $@
	@echo "// To generate this file, \"make design.h\" in the rtl directory." >> $@
	@echo "// " >> $@
	@echo "#ifndef DESIGN_H" >> $@
	@echo "#define DESIGN_H" >> $@
	@echo >> $@
	@grep "^\`" $< | grep -v default_nettype | grep -v include | sed -e '{ s/^`/#/ }' | sed -e ' s/main.v/design.h/' >> $@
	@echo >> $@
	@echo "#endif // DESIGN_H" >> $@

$(VDIRFB)/V%__ALL.a: $(VDIRFB)/V%.mk
	cd $(VDIRFB); make -f V$*.mk

#
#
#
.PHONY: bin
bin: icozip.bin
#
#
icozip.blif: toplevel.v $(VFLIST)
	echo yosys -p 'synth_ice40 -blif icozip.blif -top toplevel' $^ |tee simple.log
	yosys -p 'synth_ice40 -blif icozip.blif -top toplevel' $^ |tee -a simple.log

.PHONY: yosys
yosys: icozip.blif

icozip.asc: $(PCFFILE) icozip.blif
	arachne-pnr -d 8k -r -p $(PCFFILE) icozip.blif -o $@

.PHONY: arachne
arachne: icozip.asc

icozip.bin: icozip.asc
	icepack icozip.asc icozip.bin
	icetime -d hx8k -c 40 icozip.asc

#
#
#
#
#
simple.blif: simple.ys simplefirst.v
	yosys -p 'synth_ice40 -blif simple.blif' simplefirst.v |tee simple.log
simple.asc: icozip.pcf simple.blif

	arachne-pnr -d 8k -p icozip.pcf simple.blif -o simple.asc
simple.bin: simple.asc
	icetime -d hx8k -c 100 simple.asc
	icepack simple.asc simple.bin

.PHONY: clean
clean:
	rm -rf $(VOBJ) cpudefs.h design.h
	rm -rf *.blif *.asc *.bin
	rm -rf $(VDIRFB)/*.mk
	rm -rf $(VDIRFB)/*.cpp
	rm -rf $(VDIRFB)/*.h
	rm -rf $(VDIRFB)/



